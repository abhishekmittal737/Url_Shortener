<body>
    <!-- <div id="page-container">  -->
    

        <nav class="navbar navbar-custom" >
        
        
            <h1 class="heading">URL Shortener</h1>
        
        </nav>
        
        
            
        <div class="container" id="mainpage" style="background-color:rgb(240, 236, 236)">
            <img src="http://127.0.0.1:8080/url_pic.PNG" class=" center mt-3 pt-5"   alt="URL Shortener Logo"  >
            <form action="/shortURLs" method="POST" class="my-4 form-inline">
                    <h2 for="fullURL" class="sr-only" style="text-align: center;">URL</h2>
                    <input class="form-control mr-2 mt-3  " placeholder="Enter URL here.." type="url" id="fullURL" name="fullURL">
                    <br>
                <button class="btn btn-success" type="submit">Short URL</button>
            </form>

            <table class="table  table-hover " id ="table">
                <thead>
                    <tr>
                        <th>Full URL</th>
                        <th>Short URL</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% shortURLs.forEach(shortURL => { %>
                        <tr>
                            <td><a  href="<%= shortURL.full %> "><%= shortURL.full %></a></td>
                            <td><a  href="<%= shortURL.short %> "><%= shortURL.short %></a></td>
                        </tr>
                <% }); %> 
                    
                </tbody>
            </table>

            <form action="/delete" method="POST" class="my-4 form-inline pb-4">
                <button type="submit" class="btn btn-primary" >Clear</button>
            
            </form>

        
           

        </div>
        

        

        <footer class="bg text-light py-3 footer-custom  " id="footer" >
